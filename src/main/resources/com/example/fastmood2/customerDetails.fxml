<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFD580;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fastmood2.CustomerDetailsController">
   <children>
      <TableView fx:id="customerDetailsTable" layoutX="6.0" layoutY="69.0" prefHeight="200.0" prefWidth="588.0">
        <columns>
          <TableColumn fx:id="customer" prefWidth="75.0" text="Customer" />
          <TableColumn fx:id="phone" prefWidth="75.0" text="Phone" />
            <TableColumn fx:id="email" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="day" prefWidth="75.0" text="Day" />
            <TableColumn fx:id="tableNumber" prefWidth="75.0" text="Table Number" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TextField fx:id="fullnameField" layoutX="210.0" layoutY="303.0" promptText="enter a name..." />
      <Button fx:id="searchButton" layoutX="360.0" layoutY="303.0" mnemonicParsing="false" onAction="#searchCustomers" text="O-" />
      <Button layoutX="14.0" layoutY="28.0" mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: #add8e6;" text="BACK" textAlignment="CENTER" underline="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label layoutX="251.0" layoutY="33.0" text="Customer Details" textFill="#7b4242">
         <font>
            <Font name="Berlin Sans FB" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
